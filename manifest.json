{
  "manifest_version": 3,
  "name": "ReplyQueue",
  "description": "Find social media posts relevant to your blog content and get AI-powered reply suggestions",
  "version": "0.1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage", "sidePanel", "activeTab"],
  "host_permissions": ["https://www.linkedin.com/*", "https://linkedin.com/*", "https://openrouter.ai/*"],
  "optional_host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "side_panel": {
    "default_path": "src/sidepanel/index.html"
  },
  "action": {
    "default_title": "ReplyQueue"
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*", "https://linkedin.com/*"],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ]
}
